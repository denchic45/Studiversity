<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Kts.Subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Kts.Subtitle2" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/gilroy_medium</item>
