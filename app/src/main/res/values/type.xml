        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Kts.Body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Kts.Body2" parent="@style/TextAppearance.MaterialComponents.Body2">
